<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="FontTextView">
        <attr name="typefaceAsset" format="string"/>
    </declare-styleable>

    <declare-styleable name="FontButton">
        <attr name="typeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="FontTextInputEditText">
        <attr name="inputTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="FontEditText">
        <attr name="editTextTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="FontTextInputLayout">
        <attr name="textInputLayoutTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="FontCheckBox">
        <attr name="checkBoxTypeface" format="string"/>
    </declare-styleable>

    <declare-styleable name="GLWaveVisualizationView" tools:ignore="ResourceName">
        <attr name="av_wavesCount" format="integer" />
        <attr name="av_wavesColors" format="reference" />
        <attr name="av_wavesHeight" format="dimension" />
        <attr name="av_wavesFooterHeight" format="dimension" />
        <attr name="av_layersCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="SearchBar">
        <attr name="lytSearchView" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomProgressBarView">
        <attr name="progressSrc" format="reference"/>
    </declare-styleable>

</resources>