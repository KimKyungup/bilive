<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:clickable="true"
    android:background="@drawable/list_item_background_selector"
    android:layout_width="match_parent"
    android:layout_height="54dp">

    <ImageView
        android:id="@+id/icon"
        app:srcCompat="@drawable/ic_supertoken"
        android:tint="@color/title_lt_green_color"
        android:layout_width="60dp"
        android:padding="8dp"
        android:layout_height="60dp" />

    <org.qtum.wallet.utils.FontTextView
        android:layout_toStartOf="@+id/cost"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:text="@string/about"
        android:gravity="left|center_vertical"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:typefaceAsset="@string/proximaNovaRegular"
        android:textColor="@color/grey"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icon"/>

    <org.qtum.wallet.utils.FontTextView
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:alpha=".6"
        android:layout_centerVertical="true"
        android:id="@+id/cost"
        android:maxLines="1"
        android:scaleType="center"
        android:textSize="12sp"
        android:text="@string/qtum"
        android:textColor="@color/background"
        app:typefaceAsset="@string/proximaNovaRegular"
        android:gravity="center"
        android:tint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey20"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"/>

</RelativeLayout>