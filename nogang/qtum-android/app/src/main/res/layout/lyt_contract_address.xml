<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:weightSum="20"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:layout_weight="10">

        <org.qtum.wallet.utils.FontTextView
            android:id="@+id/contract_address_title"
            android:text="@string/contract_address"
            android:layout_centerVertical="true"
            app:typefaceAsset="@string/simplonMonoRegular"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:layout_weight="10">

        <org.qtum.wallet.utils.FontTextView
            android:id="@+id/contract_address_value"
            android:text="N/A"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            app:typefaceAsset="@string/simplonMonoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>

</LinearLayout>