<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_text_background">

    <ImageView
        android:id="@+id/imageViewWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewWriteOnBlockchain"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/landing_plus_ic" />

    <TextView
        android:id="@+id/textViewWriteOnBlockchain"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="@string/write_on_blockchain"
        android:textColor="@color/text_color_normal"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEditor"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="41dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lineSpacingMultiplier="0.8"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@color/scroll_bar_color"
        android:scrollbars="vertical"
        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라만세 무궁화 삼천리 화려강산 대한사람 대한으로 길이 보전하세 남산위에 저 소나무 철갑을 두른듯 바람 서리 불변함은 우"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/text_color_normal"
        android:textCursorDrawable="@color/text_color_normal"
        android:textSize="25sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewWriteComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditor"
        app:srcCompat="@drawable/landing_write_ok_bt" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/imageViewWriteComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEditor">

        <FrameLayout
            android:id="@+id/frameLayoutCoinSelectETH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageViewCoinSelectETH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/landing_write_coin_bg" />

            <TextView
                android:id="@+id/textViewBalanceETH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.000425ETH"
                android:textColor="@color/text_color_normal"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="305dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutCoinSelectBTC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imageViewCoinSelectBTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                app:srcCompat="@drawable/landing_write_coin_bg" />

            <TextView
                android:id="@+id/textViewBalanceBTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.000451BTC"
                android:textColor="@color/text_color_normal"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="305dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutCoinSelectQTUM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imageViewCoinSelectQTUM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/landing_write_coin_bg" />

            <TextView
                android:id="@+id/textViewBalanceQTUM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.000453QTUM"
                android:textColor="@color/text_color_normal"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="305dp" />
        </FrameLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
