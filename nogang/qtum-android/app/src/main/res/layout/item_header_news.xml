<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_news_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        app:srcCompat="@drawable/logo"/>

    <TextView
        android:id="@+id/tv_date_news_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_news_header"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@drawable/background_news_header_date"
        android:padding="3dp"
        android:text="Today, 10:20 AM"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_title_news_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_news_header"
        android:layout_margin="8dp"
        android:text="Bitcoin News for the week"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_short_text_news_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_title_news_header"
        android:layout_margin="8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textColor="@color/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_short_text_news_header"
        android:background="@color/colorPrimary"/>

</RelativeLayout>