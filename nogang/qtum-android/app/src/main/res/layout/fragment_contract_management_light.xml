<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/white"
                                                 android:clickable="true"
                                                 android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/title_color_light"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/ibt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_ibtn_back"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_back_indicator"/>

            <org.qtum.wallet.utils.FontTextView
                android:id="@+id/tv_toolbar_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:gravity="center"
                android:text="@string/functions"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_text_size"
                app:typefaceAsset="@string/proximaNovaSemibold"  />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="10dp"
            android:paddingEnd="16dp"
            android:orientation="vertical"
            android:background="@color/title_color_light"
            android:id="@+id/available_balance_view"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.qtum.wallet.utils.FontTextView
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="2dp"
                android:alpha=".7"
                android:text="@string/contract_address"
                android:layout_width="wrap_content"
                app:typefaceAsset="@string/proximaNovaRegular"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <org.qtum.wallet.utils.FontTextView
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_contract_address"
                app:typefaceAsset="@string/proximaNovaBold"
                android:text="@string/contract_address"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/methods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>