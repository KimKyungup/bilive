<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent"
                                android:layout_height="72dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ll_unsubscribe"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                app:srcCompat="@drawable/ic_unsubscribe"/>

            <org.qtum.wallet.utils.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/unsubscribe"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                app:typefaceAsset="@string/simplonMonoRegular"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/list_item_background_selector"
        android:id="@+id/main_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/date">

            <FrameLayout
                android:id="@+id/title_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp">

                <org.qtum.wallet.utils.FontTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingRight="60dp"
                    android:text="@string/about"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:typefaceAsset="@string/simplonMonoRegular"/>
            </FrameLayout>

            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/title_container"
                android:orientation="horizontal">
                
                <org.qtum.wallet.utils.FontTextView
                    android:id="@+id/contract_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="@string/about"
                    android:textColor="@color/background"
                    android:textSize="12sp"
                    app:typefaceAsset="@string/simplonMonoRegular"/>
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:id="@+id/bt_rename_contract"
                    android:layout_marginStart="1dp"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_edit_dark"
                    android:focusable="true"/>
            </LinearLayout>

            
        </RelativeLayout>


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:scaleType="center"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_setting_arrow"/>

        <org.qtum.wallet.utils.FontTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/arrow"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/about"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:typefaceAsset="@string/simplonMonoRegular"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:background="@color/colorPrimary"/>

    </RelativeLayout>


</com.daimajia.swipe.SwipeLayout>